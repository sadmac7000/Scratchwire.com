<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Scratchwire</title>
  </head>
  <body>
    {% with messages = get_flashed_messages() %}
      {% if messages %}
        <ul>
          {% for message in messages %}
            {{ message }}
          {% endfor %}
        </ul>
      {% endif %}
    {% endwith %}
    {% if session['User'] %}
      <p>Logged in as {{session['User'].email}}</p>
    {% endif %}
    <nav>
      <a href="{{url_for('login')}}">Log in</a>
      <a href="{{url_for('logout')}}">Log out</a>
    </nav>
    {% block content %}{% endblock %}
  </body>
</html>
